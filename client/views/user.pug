extends main-layout

block main-content
  p
    a(href="/admin") Return to Admin
  h3 #{user.email}
  ul
    li User ID: #{user.id}
    li Account created: #{moment(user.createdOn).format('MMM Do, YYYY')}
    li #{ user.isVerified ? 'Verified' : 'Unverified'} - #{ user.isAdmin ? 'Admin' : 'Client'}
  ul
    li Name: #{user.firstName} #{user.lastName} 
    li Organization: #{user.organization}
    li Phone: #{user.phone.phone}
    li Stripe ID: #{user.stripeID}
  if payments
    h3 Past Transactions
    ul
      each payment in payments
        li #{moment.unix(payment.created).format('MMM Do, YYYY')} - #{numeral(payment.amount).divide(100).format('$0.00')} - #{payment.description}